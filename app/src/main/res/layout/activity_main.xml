<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="331dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="46dp"
        android:foregroundGravity="top">

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/pp" />
    </FrameLayout>

    <EditText
        android:id="@+id/edtCodContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="79dp"
        android:ems="10"
        android:hint=""
        android:inputType="textCapCharacters" />

    <Button
        android:id="@+id/btFotografar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="btnFotogrfar"
        android:contentDescription="@string/descrever"
        android:text="@string/Fotografar" />

    <Button
        android:id="@+id/btfinalizar"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="btnFinalizar"
        android:contentDescription="@string/app_name"
        android:text="Finalizar" />

    <Button
        android:id="@+id/btPatio"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/Patio" />

    <TextView
        android:id="@+id/tvPatio"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="" />

</RelativeLayout>